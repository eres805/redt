<%= form_for(@user) do |f| %>

  <div>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>

  <% unless @user.id %>

    <div>
      <%= f.label :password %><br>
      <%= f.password_field :password %>
    </div>

    <div>
      <%= f.label :password_confirmation %><br>
      <%= f.password_field :password_confirmation %>
    </div>

  <% end %>

  <div>
    <%= f.submit %>
  </div>

<% end %>
